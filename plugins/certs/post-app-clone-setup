#!/usr/bin/env bash
set -eo pipefail
[[ $DOKKU_TRACE ]] && set -x

certs_post_app_clone_setup() {
  declare desc="removes cert file when setting up a clone"
  declare OLD_APP="$1" NEW_APP="$2"
  local APP_DIR="$DOKKU_ROOT/$NEW_APP"

  rm -rf "$APP_DIR/tls"
  plugn trigger post-certs-remove "$NEW_APP"
}

certs_post_app_clone_setup "$@"
